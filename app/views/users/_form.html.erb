<%= form_for @user, :html => { :multipart => true } do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="user-edit-form" class="clearfix">
    <div id="user-details">

      <div class="control-group">
        <%= f.label :username, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :username %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :email, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :email %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :password, class: "control-label" %>
        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :password_confirmation, class: "control-label" %>
        <div class="controls">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>

      <% if params[:action] == 'edit' %>
        <div class="control-group">
          <div class="control-label">Avatar</div>
          <div class="controls">
            <%= f.file_field :avatar %>
          </div>
        </div>
      <% end %>

    </div>

    <% if params[:action] == 'edit' %>
      <div id="user-game-handles">

        <div class="control-group">
          <%= f.label :wiiu_id, 'Nintendo Wii U ID', class: "control-label" %>
          <div class="controls">
            <%= f.text_field :wiiu_id %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :friendcode, 'Nintendo 3DS Friendcode', class: "control-label" %>
          <div class="controls">
            <%= f.text_field :friendcode %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :xbox_live, 'XBOX Live ID', class: "control-label" %>
          <div class="controls">
            <%= f.text_field :xbox_live %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :psn, 'Playstation Network ID', class: "control-label" %>
          <div class="controls">
            <%= f.text_field :psn %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :steam, 'Steam ID', class: "control-label" %>
          <div class="controls">
            <%= f.text_field :steam %>
          </div>
        </div>

      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit 'Save changes', class: 'btn btn-primary' %>
  </div>
<% end %>